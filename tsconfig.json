{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "types": ["node"],
    "esModuleInterop": true
  },
  "include": ["declarations.d.ts", "declarations/*.d.ts", "lib/**/*.js"]

}
